{
  "name": "beesjs",
  "version": "2.0.3",
  "description": "Javascript library that retreives data from public distributed ledgers, and decides which answer to reject or accept.",
  "main": "dist/index.js",
  "author": "FABCO <contact@fabco.tech>",
  "scripts": {
    "build": "npm run build:declaration && npx rollup -c",
    "build:declaration": "tsc -p ./tsconfig.json --outDir dist --declaration true",
    "test": "jest"
  },
  "license": "MIT",
  "homepage": "https://github.com/fabcotech/beesjs#readme",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.(ts|tsx|js)$",
    "automock": false
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "jest": "^27.5.1",
    "rollup": "^2.58.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^27.0.7",
    "tslib": "^2.0.0",
    "typescript": "^3.5.3"
  }
}
