{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["dist/*"] },
    "declaration": true,
    "declarationDir": "./dist/",
    "target": "ES5",
    "lib": ["dom", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": ["src/index.ts"]
}
